module spark.SparkMlib

import spark.Spark

/*
MLib is a library that uses RDD objects and hence the Spark framework to implement machine learning
algorithms on a cluster. "Its goal is to make practical machine learning scalable and easy"
*/    
MLlib : Library;
    = "http://spark.apache.org/docs/latest/ml-guide.html";
    supports MachineLearning;
    uses ResilientDistributedDatasets;
    uses Java;
    partOf Spark.

