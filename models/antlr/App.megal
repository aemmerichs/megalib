module antlr.App

import antlr.Core

/*
@Description:
    Any app that uses ANTLR contains
        - a grammar
        - a generated parser
        - the deployed ANTLR jar
@Rationale:
    Naming the most core elements for any Java application that reuses ANTLR
*/
?InputLanguage : Language. 
?App : Application;
	reuses ANTLR; 
    implements ?InputLanguage;
	uses Java.
?antlrJar : Artifact;
    partOf ?App;
    elementOf Jar;
    manifestsAs File;
    ^deployedAs ANTLR.